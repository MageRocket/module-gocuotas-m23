<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="magerocket_gocuotas" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="5" translate="label">
            <label>Go Cuotas</label>
            <tab>magerocket_extensions</tab>
            <resource>MageRocket_Core::configuration</resource>
            <group id="about" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="0" translate="label">
                <label>Module Configuration</label>
                <field id="link" translate="label" type="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Configuration</label>
                    <frontend_model>MageRocket\GoCuotas\Block\Adminhtml\System\Config\Form\Field\Link</frontend_model>
                </field>
            </group>
        </section>
        <section id="payment">
            <group id="gocuotas" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Go Cuotas (by <a href="https://www.magerocket.com/" target="_blank" rel="noopener noreferrer">MageRocket</a>)]]></label>
                <comment><![CDATA[Vende con <span>Go Cuotas</span> en cuotas con <span>DÃ‰BITO</span><br>]]></comment>
                <fieldset_css>gocuotas-section</fieldset_css>
                <frontend_model>MageRocket\Core\Block\Adminhtml\System\Config\Fieldset\Payment</frontend_model>
                <group id="magerocket_information" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label></label>
                    <frontend_model>MageRocket\GoCuotas\Block\Adminhtml\System\Config\Information</frontend_model>
                </group>
                <field id="active" translate="label comment" sortOrder="10" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mode" translate="label comment" sortOrder="20" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Integration Mode</label>
                    <source_model>MageRocket\GoCuotas\Model\Config\Source\IntegrationModeOption</source_model>
                    <backend_model>MageRocket\GoCuotas\Model\Config\Backend\IntegrationModeChange</backend_model>
                </field>
                <field id="title" translate="label comment" sortOrder="30" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Payment Title</label>
                    <validate>required-entry</validate>
                </field>
                <field id="description" translate="label comment" sortOrder="40" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Payment Description</label>
                    <validate>required-entry</validate>
                </field>
                <field id="payment_mode" translate="label comment" sortOrder="50" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Payment Method</label>
                    <source_model>MageRocket\GoCuotas\Model\Config\Source\CheckoutModeOption</source_model>
                    <comment>Allows you to determine the way to make the payment: Redirect / Modal</comment>
                </field>
                <field id="sort_order" translate="label comment" type="text" sortOrder="55" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Checkout Position</label>
                    <validate>validate-number required-entry</validate>
                    <comment>Payment method position</comment>
                </field>
                <group id="production" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Production Credentials</label>
                    <depends>
                        <field id="mode">1</field>
                    </depends>
                    <field id="email" translate="label comment" sortOrder="10" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Email</label>
                        <validate>required-entry no-whitespace</validate>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    </field>
                    <field id="password" translate="label comment" sortOrder="20" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Password</label>
                        <validate>required-entry no-whitespace</validate>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    </field>
                </group>
                <group id="sandbox" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sandbox Credentials</label>
                    <depends>
                        <field id="mode">0</field>
                    </depends>
                    <field id="email" translate="label comment" sortOrder="10" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Email</label>
                        <validate>required-entry no-whitespace</validate>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    </field>
                    <field id="password" translate="label comment" sortOrder="20" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Password</label>
                        <validate>required-entry no-whitespace</validate>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    </field>
                </group>
                <group id="order" translate="label" type="text" sortOrder="75" showInDefault="1" showInWebsite="1">
                    <label>Orders Configuration</label>
                    <field id="status_approved" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1">
                        <label>Status for Approved Orders</label>
                        <validate>required-entry</validate>
                        <source_model>MageRocket\GoCuotas\Model\Config\Source\OrderStatus\Approved</source_model>
                    </field>
                    <field id="status_rejected" translate="label" type="select" sortOrder="15" showInDefault="1" showInWebsite="1">
                        <label>Status for Rejected Orders</label>
                        <validate>required-entry</validate>
                        <source_model>MageRocket\GoCuotas\Model\Config\Source\OrderStatus\Rejected</source_model>
                    </field>
                </group>
                <group id="refund" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Refunds Configuration</label>
                    <field id="enable" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1">
                        <label>Enable Refunds</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="maximum_days_refund" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1">
                        <label>Maximum amount of days until refund is not accepted</label>
                        <frontend_class>validate-number-range number-range-1-30</frontend_class>
                        <comment>It must be a number between 1 and 30</comment>
                        <depends>
                            <field id="enable">1</field>
                        </depends>
                    </field>
                </group>
                <group id="widget" translate="label" type="text" sortOrder="85" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Widgets Configuration</label>
                    <field id="pdp_installments_widget" translate="label comment" sortOrder="5" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Widget Installments</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Add a Widget below the Add to Cart button with the price of the product in X interest-free installments</comment>
                        <tooltip>Applies only on the Product Page (PDP)</tooltip>
                    </field>
                    <field id="installments" translate="label comment" sortOrder="15" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Number of Interest-Free Installments</label>
                        <validate>required-entry validate-number validate-number-range number-range-1-4</validate>
                        <comment>Number of maximum interest-free installments</comment>
                        <depends>
                            <field id="pdp_installments_widget">1</field>
                        </depends>
                    </field>
                    <field id="pdp_installments_message" translate="label comment" sortOrder="10" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Widget Message</label>
                        <validate>required-entry</validate>
                        <comment>Message to display in the widget</comment>
                        <tooltip><![CDATA[Available variables:<br>%1 = Number of Installments<br>%2 = Installments Amount]]></tooltip>
                        <depends>
                            <field id="pdp_installments_widget">1</field>
                        </depends>
                    </field>
                </group>
                <group id="checkout" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Checkout Configuration</label>
                    <field id="modal_message" translate="label comment" sortOrder="10" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Modal Instructions</label>
                        <validate>required-entry</validate>
                        <comment>Message with instructions once the payment method has been selected.</comment>
                    </field>
                    <field id="redirect_message" translate="label comment" sortOrder="15" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Redirect Instructions</label>
                        <validate>required-entry</validate>
                        <comment>Message with instructions once the payment method has been selected.</comment>
                    </field>
                    <field id="show_payment_banner" translate="label comment" sortOrder="20" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Show Banner in Checkout</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Enables displaying or hiding the banner shown alongside the Payment Method</comment>
                    </field>
                    <field id="payment_banner" translate="label" type="image" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Checkout Banner</label>
                        <config_path>payment/gocuotas/checkout_banner</config_path>
                        <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
                        <upload_dir config="system/filesystem/media" scope_info="1">gocuotas/banner</upload_dir>
                        <base_url type="media" scope_info="1">gocuotas/banner</base_url>
                        <depends>
                            <field id="show_payment_banner">1</field>
                        </depends>
                    </field>
                </group>
                <group id="mix" translate="label" type="text" sortOrder="95" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Others Configurations</label>
                    <field id="debug" translate="label comment" sortOrder="5" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Debug Mode</label>
                        <config_path>payment/gocuotas/debug</config_path>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment>Allows extended logs</comment>
                    </field>
                    <field id="secret" translate="label comment" sortOrder="10" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Secret</label>
                        <validate>required-entry no-whitespace</validate>
                        <config_path>payment/gocuotas/secret</config_path>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                        <comment><![CDATA[<b class='donotchange'>DO NOT CHANGE</b>: Used to authenticate Go Cuotas responses. If you change it, the pending payments will be <b>CANCELED</b>]]></comment>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
